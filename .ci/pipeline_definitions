metrics-exporter:
  template: default
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: inject-commit-hash
        inject_effective_version: true
      publish:
        dockerimages:
          metrics-exporter:
            registry: gcr-readwrite
            image: eu.gcr.io/gardener-project/gardener/metrics-exporter
            dockerfile: Dockerfile
            target: metrics-exporter
            tag_as_latest: true
    steps:
      check:
        image: 'golang:1.15.8'

  release-branches:
    index: 1
    branches: ['release-*']
    inherit:
      metrics-exporter:
        base_definition:
          steps:
            verify:
              image: 'golang:1.15.8'
        jobs:
          release:
            traits:
              release:
                nextversion: 'bump_patch'
  jobs:
    head-update:
      traits:
        draft_release: ~
        component_descriptor: ~
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
    release:
      traits:
        version:
          preprocess: finalize
        release:
          nextversion: bump_minor
        component_descriptor: ~
