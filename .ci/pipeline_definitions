metrics-exporter:
  base_definition:
    traits:
      version:
        preprocess: inject-commit-hash
        inject_effective_version: true
      publish:
        dockerimages:
          metrics-exporter:
            image: eu.gcr.io/gardener-project/gardener/metrics-exporter
            dockerfile: Dockerfile
            target: metrics-exporter
            tag_as_latest: true
    steps:
      check:
        image: 'golang:1.19'
  jobs:
    head-update:
      traits:
        draft_release: ~
        component_descriptor: ~
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
    release:
      traits:
        version:
          preprocess: finalize
        release:
          nextversion: bump_minor
        component_descriptor: ~
